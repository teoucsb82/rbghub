<%= simple_form_for(@listing, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :role, :include_blank => "-- Select Role --",
      collection: [['Flag Carrier', 'fc'],
      ['Healer','healer'],
      ['Damage','dps']] %>
    <%= f.input :listSkype, label: "Make Skype ID Public?", as: :radio_buttons %>
    <%= f.input :listBattletag, label: "Make BattleTag Public?", as: :radio_buttons %>
    <%= f.input :toon %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
