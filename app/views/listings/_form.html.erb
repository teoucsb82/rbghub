<%= simple_form_for(@listing, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :toon, collection: current_user.characters.all %>
    <%= f.input :role, :include_blank => "-- Select Role --",
      collection: [['Flag Carrier', 'fc'],
      ['Healer','healer'],
      ['Damage','dps']] %>
    <%= f.input :btag, label: "BattleTag", :input_html => { :value => current_user.battletag}, placeholder: "ex. name#1234"  %>    
    <%= f.input :description, label: "Additional Information", :input_html => { :class => "span4"} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
